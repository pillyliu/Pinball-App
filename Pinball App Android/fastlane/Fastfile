default_platform(:android)

platform :android do
  desc "Run practice migration unit tests"
  lane :test_migration do
    gradle(task: "testDebugUnitTest", flags: "--tests com.pillyliu.pinballandroid.practice.PracticeCanonicalPersistenceTest")
  end

  desc "Run unit tests"
  lane :test do
    gradle(task: "test")
  end

  desc "Build release AAB"
  lane :build_release do
    test_migration
    gradle(task: "clean bundle", build_type: "Release")
  end

  desc "Upload release AAB to Google Play internal track using the existing Gradle version"
  lane :internal do
    test_migration
    gradle(task: "clean bundle", build_type: "Release")
    upload_to_play_store(
      track: "internal",
      release_status: "draft",
      aab: "app/build/outputs/bundle/release/app-release.aab"
    )
  end

  desc "Upload release AAB to Google Play closed testing (alpha track) using the existing Gradle version"
  lane :closed do
    test_migration
    gradle(task: "clean bundle", build_type: "Release")
    upload_to_play_store(
      track: "alpha",
      release_status: "draft",
      aab: "app/build/outputs/bundle/release/app-release.aab"
    )
  end
end
